<h1>My tasks</h1>
<div class="border-bottom pb-2">
<% @tasks.each do |task| %>
<div>
  <% if task.completed %>
    <i class="fa-regular fa-square-check"></i>
  <% else %>
    <i class="fa-regular fa-square"></i>
  <% end %>
  <%= link_to task.title, task_path(task), class: 'text-decoration-none' %> <%= link_to task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
    <i class="fa-solid fa-trash-can"></i>
  <% end %>
</div>
<% end %>
</div>
<div class="pt-2"><i class="fa-solid fa-plus"></i> <%= link_to 'Add a new task', new_task_path, class: 'text-decoration-none' %></div>
