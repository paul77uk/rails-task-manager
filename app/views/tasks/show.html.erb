<div class="d-flex justify-content-between align-items-center mb-3">
  <h1><%= @task.title %></h1>
  <%= link_to edit_task_path, class: 'btn btn-outline-secondary' do %>
    <i class="fa-solid fa-pencil"></i> Edit this task
  <% end %>
</div>
<div class="card p-3 bg-light"><%= @task.details %></div>
<div class="py-3 border-bottom">
  <% if @task.completed %>
    <i class="fa-regular fa-square-check"></i> This task is completed
  <% else %>
    <i class="fa-regular fa-square"></i> This task is not completed yet
  <% end %>
</div>
<div class="py-3"><%= link_to 'Back to list', tasks_path %></div>
